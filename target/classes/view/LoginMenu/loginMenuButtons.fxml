<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.loginMenu.LoginMenuController"
            prefHeight="800.0" prefWidth="600.0">

    <center>
        <VBox alignment="CENTER" spacing="10">
            <Text text="Welcome to AA"/>
            <HBox alignment="CENTER" spacing="10">
                <TextField maxWidth="300" promptText="username" fx:id="username"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <PasswordField maxWidth="300" promptText="password" fx:id="password"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Button prefWidth="120" text="submit" onMouseClicked="#submit"/>
                <Button prefWidth="120" text="reset" onMouseClicked="#reset"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Button prefWidth="120" text="signup menu" onMouseClicked="#enterSignupMenu"/>
                <Button prefWidth="120" text="enter as guest" onMouseClicked="#enterGuestMode"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
