<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.LoginMenu.LoginMenuController"
            stylesheets="@../../styles/menusStyle.css"
            prefHeight="600.0" prefWidth="800.0">

    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label text="Welcome to aa"/>
            <HBox alignment="CENTER" spacing="10">
                <TextField maxWidth="300" promptText="username" fx:id="username"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <PasswordField maxWidth="300" promptText="password" fx:id="password"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Button text="submit" onMouseClicked="#submit"/>
                <Button text="reset" onMouseClicked="#reset"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Button text="signup menu" onMouseClicked="#enterSignupMenu"/>
                <Button text="enter as guest" onMouseClicked="#enterGuestMode"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
