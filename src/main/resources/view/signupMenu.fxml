<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.SignupMenu.SignupMenuController"
            stylesheets="@../styles/menusStyle.css"
            prefHeight="400.0" prefWidth="600.0">

    <center>
        <VBox alignment="CENTER" spacing="10">
            <HBox alignment="CENTER" spacing="10">
                <TextField maxWidth="300" promptText="username" fx:id="username"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <TextField maxWidth="300" promptText="password" fx:id="password"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <TextField maxWidth="300" promptText="email" fx:id="email"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Button text="submit" onMouseClicked="#submit"/>
                <Button text="reset" onMouseClicked="#reset"/>
            </HBox>
            <HBox alignment="CENTER">
                <Button text="login menu" onMouseClicked="#enterLoginMenu"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
