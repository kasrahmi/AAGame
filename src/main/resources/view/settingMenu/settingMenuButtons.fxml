<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.MainMenu.SettingMenu.SettingMenuController"
            prefHeight="600.0" prefWidth="800.0">
    <center>
        <VBox alignment="CENTER" spacing="10">
            <HBox alignment="CENTER" spacing="10">
                <Text text="Hardness level :"/>
                <HBox alignment="CENTER" spacing="5">
                    <Text text="easy"/>
                    <CheckBox text="1" fx:id="easy" onAction="#checkEasy"/>
                </HBox>
                <HBox alignment="CENTER" spacing="5">
                    <Text text="medium"/>
                    <CheckBox text="2" fx:id="medium" onAction="#checkMedium"/>
                </HBox>
                <HBox alignment="CENTER" spacing="5">
                    <Text text="hard"/>
                    <CheckBox text="3" fx:id="hard" onAction="#checkHard"/>
                </HBox>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_LEFT">
            <Button text="back" onMouseClicked="#back"/>
        </HBox>
    </bottom>

</BorderPane>
