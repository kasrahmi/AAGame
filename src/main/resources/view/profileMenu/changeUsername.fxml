<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.MainMenu.ProfileMenu.ProfileMenu"
            prefHeight="600.0" prefWidth="800.0">
    <center>
        <VBox alignment="CENTER" spacing="10">
            <HBox alignment="CENTER" spacing="10">
                <TextField maxWidth="300" promptText="new username" fx:id="newUsername"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Button prefWidth="120" text="submit" onMouseClicked="#changeUsernameSubmit"/>
                <Button prefWidth="120" text="back" onMouseClicked="#backToProfileMenu"/>
            </HBox>
            <HBox alignment="CENTER">
                <Text text="" fx:id="changeUsername"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
