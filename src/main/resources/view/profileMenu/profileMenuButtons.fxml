<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.MainMenu.ProfileMenu.ProfileMenu"
            stylesheets="@../../styles/menusStyle.css"
            prefHeight="600.0" prefWidth="800.0">

        <center>
            <VBox alignment="CENTER" spacing="10">
                <HBox alignment="CENTER" spacing="10">
                    <Button prefWidth="120" text="change username" onMouseClicked="#changeUsername"/>
                    <Button prefWidth="120" text="change password" onMouseClicked="#changePassword"/>
                </HBox>
                <HBox alignment="CENTER" spacing="10">
                    <Button prefWidth="120" text="delete account" onMouseClicked="#deleteAccount"/>
                    <Button prefWidth="120" text="select avatar" onMouseClicked="#avatarMenu"/>
                </HBox>
                <HBox alignment="CENTER" spacing="10">
                    <Button prefWidth="120" text="back" onMouseClicked="#backToMain"/>
                </HBox>
            </VBox>
        </center>

</BorderPane>
